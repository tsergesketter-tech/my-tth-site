{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "rootDirs": ["src", "../shared"],   // <-- allow compiling ../shared
    "baseUrl": ".",                     // (optional) for alias
    "paths": { "@shared/*": ["../shared/*"] }  // (optional) alias
  },
  "include": ["src", "../shared"]
}