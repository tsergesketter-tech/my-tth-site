{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",          // lowercase
    "target": "ES2020",
    "moduleResolution": "node",    // lowercase
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,     // handy for config files if needed
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
