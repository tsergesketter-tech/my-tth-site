    <validationRules>
        <fullName>Trip_End_After_Start</fullName>
        <active>true</active>
        <description>Trip end date must be after or equal to trip start date</description>
        <errorConditionFormula>AND(
            NOT(ISBLANK(Trip_Start_Date__c)),
            NOT(ISBLANK(Trip_End_Date__c)),
            Trip_End_Date__c &lt; Trip_Start_Date__c
        )</errorConditionFormula>
