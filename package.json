{
  "name": "my-tth-site",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "heroku-postbuild": "npm --prefix client install && npm --prefix client run build && npm --prefix server install --include=dev && npm --prefix server run build",
    "repo:map": "node ./scripts/repo-map.mjs",
    "client:dev": "npm --prefix client start",
    "server:dev": "npm --prefix server run dev",
    "rebuild": "cd client && npm run build && cd .. && cd server && node dist/index.js",
    "postinstall": "npm run build -w shared"
  },
  "engines": {
    "node": "20.x",
    "npm": "8.x"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2",
    "react-datepicker": "^8.4.0",
    "react-day-picker": "^9.8.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/body-parser": "^1.19.6",
    "@types/connect": "^3.4.38",
    "@types/express": "^5.0.3",
    "@types/graceful-fs": "^4.1.9",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/http-proxy": "^1.17.16",
    "@types/json5": "^0.0.30",
    "@types/q": "^1.5.8",
    "@types/serve-index": "^1.9.4",
    "@types/trusted-types": "^2.0.7",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.33"
  }
}
